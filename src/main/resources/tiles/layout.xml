<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    
   <!-- 레이아웃 -->
	<definition name="baseLayout" template="/WEB-INF/jsp/common/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp"/>
        <put-attribute name="body" value=""/>
    </definition> 
    
    <!-- jsp 타일즈(1단) -->
	 <definition name="*/*" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp"/>
	</definition> 
		
	<definition name="/member/memberJoin" extends="baseLayout">
		<put-attribute name="title" value="회원가입" />
		<put-attribute name="body" value="/WEB-INF/jsp/member/memberJoin.jsp" />
	</definition>
	
	<definition name="/member/loginFrm" extends="baseLayout">
		<put-attribute name="title" value="회원가입" />
		<put-attribute name="body" value="/WEB-INF/jsp/member/loginFrm.jsp" />
	</definition>
</tiles-definitions>


